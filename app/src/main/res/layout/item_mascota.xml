<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageView_mascota"
        android:layout_width="0dp"
        android:layout_height="361dp"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/ic_dog_1" />

    <ImageView
        android:id="@+id/white_bone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_bone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_mascota" />


    <TextView
        android:id="@+id/textView_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Catty"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/white_bone"
        app:layout_constraintStart_toEndOf="@id/white_bone"
        app:layout_constraintTop_toTopOf="@+id/white_bone" />

    <TextView
        android:id="@+id/textView_puntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:text="0"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/yellow_bone"
        app:layout_constraintEnd_toStartOf="@+id/yellow_bone"
        app:layout_constraintTop_toTopOf="@+id/yellow_bone" />

    <ImageView
        android:id="@+id/yellow_bone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_bone_yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_mascota" />

</androidx.constraintlayout.widget.ConstraintLayout>